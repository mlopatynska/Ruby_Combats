<!DOCTYPE html>
<html>
  <head>
    <title>Combats</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <link rel="stylesheet" href="//maxcdn.bootstrapcdn.com/bootstrap/3.0.3/css/bootstrap.css">
    <link rel="stylesheet" href="//maxcdn.bootstrapcdn.com/bootstrap/3.0.3/css/bootstrap-theme.css">
  </head>

  <body>
    <%= yield %>
    <div class="container">
      <% flash.each do |key, value| %>
        <div class="alert alert-<%= key %>">
        <%= value %>
        </div>
      <% end %>
    </div>

    <%= yield :top_content %>

    <p class="notice"><%= notice %></p>
    <p class="alert"><%= alert %></p>
    <% if user_signed_in? %>
        <span><%= current_user.email %> welcome to Combats</span>
        <%= link_to 'Sign Out', destroy_user_session_path, :method => :delete %>
    <% end %>
    <%= debug(params) if Rails.env.development? %>

  </body>
</html>
